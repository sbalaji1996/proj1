<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% if @trainer.id == current_trainer.id %>
  <h4> This trainer has the following Pokemon: </h4>
  <p> </p>
    <% @trainer.pokemon.each do |pokemon| %>
      <%= pokemon.name %> -- Health: <%= pokemon.health %>
      <%= button_to "Damage Pokemon!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %>
      <p> </p>
    <% end %>
<% end %>
<% if @trainer.id != current_trainer.id %>
  <h4> This trainer has the following Pokemon: </h4>
  <p> </p>
    <% @trainer.pokemon.each do |pokemon| %>
      <%= pokemon.name %> -- Health: <%= pokemon.health %>
      <%= button_to "Damage Pokemon!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %>
      <p> </p>
    <% end %>
<% end %>
<% if @trainer == current_trainer %>
  <%= button_to "Create new Pokemon!", new_pokemon_path, :class => "button medium", :method => :get %>
<% end %>
